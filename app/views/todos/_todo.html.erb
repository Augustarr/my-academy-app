<li id="<%= dom_id(todo) %>" class="todo-item">
  <span class="todo-status">
    <% if todo.completed == true %>
      [x]
    <% else %>
      [ ]
    <% end %>
  </span>

<span class="todo-title <%= 'completed' if todo.completed == true %>">
    <%= todo.title %>
  </span>
  <div class="todo-actions">
    <% if todo.completed == true %>
      <%= button_to "Incomplete", todo_path(todo, todo: { completed: false }), method: :patch, data: { turbo: false }, class: "inline-button" %>
    <% else %>
      <%= button_to "Complete", todo_path(todo, todo: { completed: true }), method: :patch, data: { turbo: false }, class: "inline-button" %>
    <% end %>
    <%= button_to "Delete", todo_path(todo), method: :delete, data: { turbo: false, confirm: "Are you sure you want to delete this todo?" }, class: "delete-button" %>
  </div>
</li>